{% extends "@authentication/email/base.html.twig" %}
{% block in_box %}
    <h1 style="font-size=32px;">Welcome {{ displayName }}!</h1>
    <p>You're receiving this mail because you recently signed up for the account wit username <b>{{ username }}</b>.</p>
    <p>Confirm your email address by clicking the button below. This step adds extra security to your business by verifying you own this email.</p>
{% endblock %}
{% block outside_box %}
    <table width="100%" border="0" cellspacing="14px" cellpadding="0">
        <tr align="center">
            <td><a style="text-decoration: none; font-size=24px; color: #FAFAFA; background-color: #888; padding: 14px; border-radius:10px" href='{{ url }}'>Activate your account</a></td>
        </tr>
        <tr>
            <td>Thank you,</td>
        </tr>
        <tr>
            <td>Roda</td>
        </tr>
        <tr>
            <td><hr></td>
        </tr>
        <tr>
            <td align="center">You have 24 hours to confirm the registration</td>
        </tr>
    </table>
{% endblock %}
